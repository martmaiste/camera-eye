# go2rtc.yaml.example
# Rename this to go2rtc.yaml and update with your camera details

streams:
  # Standard RTSP camera
  front_door: rtsp://admin:password@192.168.1.10:554/h264Preview_01_main
  
  # Reolink camera (using specialized protocol)
  backyard: http://192.168.1.11/flv?port=1935&app=bcs&stream=channel0_main.pv&user=admin&password=password
  
  # A test stream (useful for verifying the dashboard works)
  test_stream: exec:ffmpeg -re -f lavfi -i testsrc=size=1280x720:rate=30 -f rtsp -rtsp_transport tcp rtsp://localhost:8554/test_stream

api:
  listen: ":1984"

rtsp:
  listen: ":8554"
